<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/barToolDetalleCupones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme">

        <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar_cupones"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:contentScrim="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView

                    android:id="@+id/imagen_cabecera_cupones"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:background="@drawable/con1"
                    android:scaleType="fitXY"
                    app:layout_collapseMode="parallax" />

            <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar_detalle_cupones"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_collapseMode="pin"
            />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton

            app:backgroundTint="@android:color/transparent"
            android:translationZ="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:maxImageSize="55dp"
            android:src="@drawable/estrellaa"
            app:layout_anchor="@id/barToolDetalleCupones"
            app:layout_anchorGravity="bottom|right"
            app:layout_collapseMode="parallax"
            android:id="@+id/estrella"
            android:layout_marginRight="10dp"/>

    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:background="#fff"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_height="match_parent" android:id="@+id/nescroll_cupones">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="10dp">

            <include layout="@layout/activity_contenido_cupones"
                     android:background="#FAFAFA"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            app:backgroundTint="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:maxImageSize="55dp"
            android:layout_margin="16dp"
            android:src="@drawable/estrellaa"
            android:layout_gravity="bottom|end"
            app:layout_collapseMode="parallax"
            android:id="@+id/estrella_dos"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>