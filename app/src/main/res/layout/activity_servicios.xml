<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#f2f2f2"
        tools:context=".ServiciosActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_servicios"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_collapseMode="pin"
        app:title="Servicios"
        android:theme="@style/AppTheme"
        android:background="#53ADF9"
    />
    <ScrollView
            android:layout_width="match_parent"
            android:background="#fff"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_height="wrap_content"
            android:id="@+id/nescroll">
        <RelativeLayout
                android:layout_width="match_parent"
                android:paddingBottom="25dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="15dp">
            <TextView
                    android:id="@+id/txt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Ambulacia"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    app:fontFamily="@font/robotoregular"
                    android:textStyle="bold"/>
            <androidx.recyclerview.widget.RecyclerView
                    android:layout_below="@+id/txt1"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginRight="10dp"
                    android:layout_height="150dp"
                    android:id="@+id/listaServicios"/>

            <TextView
                    android:id="@+id/txt2"
                    android:layout_below="@+id/listaServicios"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Grúa"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    app:fontFamily="@font/robotoregular"
                    android:textStyle="bold"/>
            <androidx.recyclerview.widget.RecyclerView
                    android:layout_below="@+id/txt2"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginRight="10dp"
                    android:layout_height="150dp"
                    android:id="@+id/listaServicios2"/>
            <TextView
                    android:id="@+id/txt3"
                    android:layout_below="@+id/listaServicios2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Plomería"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    app:fontFamily="@font/robotoregular"
                    android:textStyle="bold"/>
            <androidx.recyclerview.widget.RecyclerView
                    android:layout_below="@+id/txt3"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="150dp"
                    android:id="@+id/listaServicios3"/>

            <TextView
                    android:id="@+id/txt4"
                    android:layout_below="@+id/listaServicios3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Grúa"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    app:fontFamily="@font/robotoregular"
                    android:textStyle="bold"/>
            <androidx.recyclerview.widget.RecyclerView
                    android:layout_below="@+id/txt4"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="150dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/listaServicios4"/>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>