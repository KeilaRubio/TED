<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".activity.noticias.DetalleNoticiaActivity"
android:orientation="vertical"
android:background="#EBEBEB">
<!--<RelativeLayout-->
<!--android:id="@+id/cabecera"-->
<!--android:layout_width="match_parent"-->
<!--android:layout_height="wrap_content">-->
<ImageView
        android:layout_width="match_parent"
        android:layout_height="213dp"
        app:srcCompat="@drawable/con1"
        android:id="@+id/ivfoto"/>
<com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/me_gusta"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:clickable="true"
        app:srcCompat="@drawable/lie"
        app:backgroundTint="@android:color/transparent"
        app:maxImageSize="80dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="25dp"
        android:layout_alignBottom="@+id/ivfoto"/>

<!--</RelativeLayout>-->

<LinearLayout
        android:id="@+id/contenido"
        android:layout_below="@+id/ivfoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp">

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text='Ken Robinson "Las escuelas matan la creatividad"'
              android:textSize="24sp"
              android:textColor="#000000"
              android:id="@+id/tvTitulo" app:fontFamily="serif" android:textStyle="bold"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvHora"
            android:textStyle="bold"
            app:fontFamily="serif"
            android:textSize="18sp"/>

    <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvDetalle"
            tools:text="Lo que Ken Robinson pone de manifiesto, es que es necesario potenciar otros métodos de aprendizaje y enseñanza, resolución de problemas y respaldo de la creatividad, y esto es algo que considero que podemos conseguir gracias a utilizar mucho más nuestro pensamiento visual. Dentro de la educación es vital empezar a dar protagonismo y fomentar la Creatividad, teniendo que llegar a considerarla algo básico como la alfabetización."
            android:textSize="18sp"
            android:textColor="#575656"
            android:layout_marginTop="10dp"
            app:fontFamily="casual"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="26dp"
                  android:layout_marginTop="15dp">
        <TextView
                android:text="Traducido al Español por "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:textSize="18sp"
                android:layout_marginLeft="15dp" app:fontFamily="casual"/>
        <TextView
                android:text="Francisco Gneco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:textSize="18sp"
                android:textColor="#E91E36" app:fontFamily="casual"/>
    </LinearLayout>
    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content">
        <TextView
                android:text="Revisado por "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:id="@+id/textView4"
                android:layout_weight="1"
                android:textSize="18sp" app:fontFamily="casual"/>
        <TextView
                android:text="Miguel Cisneros"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:layout_weight="1"
                android:textColor="#E91E36"
                android:textSize="18sp" app:fontFamily="casual"/>

    </LinearLayout>

</LinearLayout>

</RelativeLayout>