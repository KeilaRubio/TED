<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="170dp"
            app:cardCornerRadius="5dp"
            app:cardMaxElevation="2dp"
            android:background="#fff"
            app:cardElevation="7dp"
    >
            <ImageView
                    android:id="@+id/imagen_cupon"
                    android:src="@drawable/con3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
            />
            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/image_cupones">
            </FrameLayout>
            <TextView
                    android:id="@+id/tituloCupones"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Titulo"
                    app:fontFamily="@font/robotoregular"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:layout_marginLeft="120dp"
                    android:layout_marginTop="100dp"
            />
            <ImageView
                    android:id="@+id/imagen_logo"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_launcher_background"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="70dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/borde_image"
            />

    </androidx.cardview.widget.CardView>
</RelativeLayout>